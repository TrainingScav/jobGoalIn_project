{{> layout/header}}

<div class="signup-container">
    <!-- 회원 타입 선택 탭 -->
    <div class="tab-buttons">
        <a href="/signup/normal" class="{{#isNormal}}tab-button active{{/isNormal}}{{^isNormal}}tab-button{{/isNormal}}">일반 회원</a>
        <a href="/signup/company" class="{{#isCompany}}tab-button active{{/isCompany}}{{^isCompany}}tab-button{{/isCompany}}">기업 회원</a>
    </div>

    <!-- 일반 회원 가입 폼 -->
    <form action="/signup/normal" method="post" class="signup-form">
        <h2>일반 회원 가입</h2>
        <input type="text" name="username" placeholder="이름" required>
        <input type="text" name="userLoginId" placeholder="로그인 아이디" required>
        <input type="password" name="userPassWord" placeholder="비밀번호" required>
        <input type="email" name="userEmail" placeholder="이메일" required>
        <input type="text" name="userAddress" placeholder="주소">
        <input type="text" name="userPhone" placeholder="전화번호">
        <input type="text" name="userBirth" placeholder="생년월일 (- 빼고 작성 해주세요)">
        <select name="userGender" required>
            <option value="">성별 선택</option>
            <option value="M">남</option>
            <option value="F">여</option>
        </select>
        <input type="text" name="userNickname" placeholder="닉네임">
        <input type="text" name="userCivilSerial" placeholder="주민등록번호" required>
        <button type="submit" class="submit-button">회원가입</button>
    </form>
</div>

{{> layout/footer}}