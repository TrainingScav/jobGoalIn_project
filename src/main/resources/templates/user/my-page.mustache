{{> layout/header}}
<body>
<div class="main">

    <!-- ✅ 사용자 프로필 정보 -->
    <div class="profile-box">
        <!-- 이름/닉네임 - 문단 최상단 -->
        <div class="profile-header">
            <h3>{{userInfo.username}}/ {{userInfo.userNickName}}</h3>
        </div>

        <!-- 우측 상단 수정 버튼 -->
        <div style="width: 100%; text-align: right; margin-bottom: 10px;">
            <a href="/user/update-form" class="btn-edit">회원정보 수정</a>
        </div>

        <div class="profile-info">
            <div class="meta">가입일:{{userInfo.userCreatedAt}}</div>
            <div class="meta">이메일:{{userInfo.userEmail}}</div>
            <div class="meta">주소:{{userInfo.userAddress}}</div>
            <div class="meta">전화번호:{{userInfo.userPhoneNumber}}</div>
        </div>
    </div>

    <!-- ✅ 이력서 목록 -->
    <div class="resume-section">
        <h4>작성한 이력서 목록</h4>
        <table class="resume-table">
            <thead>
            <tr>
                <th style="width: 50%;">제목</th>
                <th style="width: 30%;">등록 일시</th>
                <!-- "작업" 문구 제거됨 -->
                <th style="width: 20%;"></th>
            </tr>
            </thead>
            <tbody>
            {{#posts}}
            <tr>
                <td class="center-text">
                    <a href="/resume/detail/{{resumeNo}}" class="resume-link">{{title}}</a>
                </td>
                <td class="center-text">{{instDate}}</td>
                <td>
                    <div class="btn-group">
                        <a href="/resume/update/1" class="btn-small">수정</a>
                        <a href="/resume/delete/1" class="btn-small btn-delete">삭제</a>
                    </div>
                </td>
            </tr>
            {{/posts}}
        </table>

        <!-- 이력서 작성 버튼 -->
        <div class="resume-write-btn">
            <a href="/resumelist/resume-register" class="btn-write">이력서 등록</a>
        </div>
    </div>
</div>
</body>
{{> layout/footer}}
