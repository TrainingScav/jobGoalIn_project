{{> layout/header}}
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8"/>
    <title>회원정보 수정</title>
    <link rel="stylesheet" href="/css/update-form.css">
</head>
<body>

<div class="main">
    <div class="tabs">
        <a class="tab" href="my-page">MY</a>
        <a class="tab active" href="update-form">계정</a>
        <a class="tab" href="resume-list">이력서</a>
    </div>

    <div class="form-box">
        <form action="/update/{{userInfo.userId}}" method="post">
            <!-- 이름: 읽기 전용 -->
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" id="name" name="name" value="{{userInfo.username}}" readonly>
            </div>

            <!-- 이메일: 읽기 전용 -->
            <div class="form-group">
                <label for="email">이메일</label>
                <input type="email" id="email" name="email" value="{{userInfo.userEmail}}" readonly>
            </div>

            <!-- 닉네임: 수정 가능 -->
            <div class="form-group">
                <label for="nickname">닉네임</label>
                <input type="text" id="nickname" name="userNickname" value="{{userInfo.userNickName}}">
            </div>

            <!-- 비밀번호: 수정 가능 -->
            <div class="form-group">
                <label for="password">비밀번호</label>
                <input type="password" id="password" name="userPassword" placeholder="변경할 경우에만 입력해주세요">
            </div>

            <!-- 주소: 수정 가능 -->
            <div class="form-group">
                <label for="address">주소</label>
                <input type="text" id="address" name="UserAddress" value="{{userInfo.userAddress}}">
            </div>

            <!-- 휴대폰 번호: 수정 가능 -->
            <div class="form-group">
                <label for="phone">휴대폰 번호</label>
                <input type="text" id="phoneNumber" name="UserPhoneNumber" value="{{userInfo.userPhone}}">
            </div>

            <div class="form-actions">
                <button type="submit">저장하기</button>
            </div>
        </form>
    </div>
</div>

</body>
</html>
{{> layout/footer}}