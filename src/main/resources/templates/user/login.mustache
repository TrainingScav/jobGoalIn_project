{{> layout/header}}

<div class="login-page">
    <div class="login-container">
        <div class="login-title">로그인</div>
        <form action="/login" method="post">
            <div class="login-type">
                <label><input type="radio" name="loginType" value="normal" checked> 일반 회원</label>
                <label><input type="radio" name="loginType" value="company"> 기업 회원</label>
            </div>
            <input type="text" name="userLoginId" class="login-input" placeholder="아이디" required>
            <input type="password" name="userPassWord" class="login-input" placeholder="비밀번호" required>
            <button type="submit" class="login-button">로그인</button>
        </form>
    </div>
</div>


