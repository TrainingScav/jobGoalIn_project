{{> layout/header}}
<body>
<div class="resume-wrapper">

    <!-- 목록으로 이동 + 중앙 제목 -->
    <div class="resume-detail-header">
        <div class="back-button">
            <a href="/resumes"> ← 목록으로 이동</a>
        </div>
    </div>

    {{#resume}}
    <!-- 작성자 정보 -->
    <h2 class="section-title">이력서 작성자 정보</h2>
    <div class="info-grid">
        <div class="info-item">
            <span class="icon">📝</span> <strong>이름</strong><p>{{name}}</p>
        </div>
        <div class="info-item">
            <span class="icon">🚻</span> <strong>성별</strong><p>{{genderInfo}}</p>
        </div>
        <div class="info-item">
            <span class="icon">📅</span> <strong>생년월일</strong><p>{{birthdate}}</p>
        </div>
        <div class="info-item">
            <span class="icon">📞</span> <strong>전화번호</strong><p>{{phoneNumber}}</p>
        </div>
        <div class="info-item">
            <span class="icon">📧</span> <strong>이메일</strong><p>{{email}}</p>
        </div>
        <div class="info-item">
            <span class="icon">🏠</span> <strong>주소</strong><p>{{address}}</p>
        </div>
    </div>

    <!-- 요약 정보 -->
    <h2 class="section-title">포지션/기술스택/경력 정보</h2>
    <div class="summary-line">
        <div class="summary-item"><span class="icon">💼</span> <strong>개발 직무</strong>: {{position}}</div>
        <div class="summary-item"><span class="icon">🛠️</span> <strong>기술 스택</strong>: {{skill}}</div>
        <div class="summary-item"><span class="icon">📆</span> <strong>경력 여부</strong>: {{experiencedStatus}}</div>
    </div>

    <!-- 자기소개서 -->
    <h2 class="section-title">자기소개서</h2>
    <div class="intro-box">
        <p>
            {{content}}
        </p>
    </div>
    {{/resume}}
</div>
</body>
{{> layout/footer}}
