{{> layout/header}}

<div class="company-detail">
    <div class="wrapper">
        <div class="container">

            <div class="top-bar">
                <a href="/company/1/review" class="list-button">리뷰 목록</a>
            </div>

            <h1>리뷰 등록</h1>

            <!-- 리뷰 작성 폼 -->
            <form action="/company/1/review" method="post" class="review-form">

                <div class="form-group">
                    <label for="userId">아이디</label>
                    <input type="text" id="userId" name="userId" required>
                </div>

                <div class="form-group">
                    <label for="rating">평가</label>
                    <textarea id="rating" name="rating" required></textarea>
                </div>

                <div class="form-group">
                    <label for="isCurrentEmployee">현직원 여부</label>
                    <select id="isCurrentEmployee" name="isCurrentEmployee" required>
                        <option value="true">현직원</option>
                        <option value="false">전직원</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="isRecommended">추천 여부</label>
                    <select id="isRecommended" name="isRecommended" required>
                        <option value="true">추천</option>
                        <option value="false">비추천</option>
                    </select>
                </div>

                <button type="submit" class="submit-button">리뷰 등록</button>

            </form>

        </div>
    </div>
</div>

{{> layout/footer}}
