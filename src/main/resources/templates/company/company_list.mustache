{{> layout/header}}
<div class="company-list-page" style="padding: 2rem; background-color: #f9f9f9;">
    <div class="company-list-container" style="max-width: 960px; margin: auto;">
        <!-- 헤더 + 추가 버튼 + 검색창 -->
        <div class="company-list-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <h1 style="margin: 0; font-size: 1.8rem;">기업 목록</h1>
            <div style="display: flex; gap: 0.5rem; align-items: center;">
                {{#sessionUser}}
                    {{#isCompany}}{{#isCompanyInfoWritable}}
                        <a href="/company/form" class="add-button"
                           style="padding: 0.5rem 1rem; background: #3498db; color: #fff; border-radius: 4px; text-decoration: none;">
                            기업 추가
                        </a>
                    {{/isCompanyInfoWritable}}{{/isCompany}}
                {{/sessionUser}}

                <!-- 검색창 -->
                <form action="/company/list" method="get" style="display: flex; align-items: center;">
                    <input type="text" name="keyword" value="{{keyword}}" placeholder="회사명 검색"
                           style="padding: 0.5rem; font-size: 0.9rem; border: 1px solid #ccc; border-radius: 4px;">
                    <button type="submit"
                            style="margin-left: 0.5rem; padding: 0.5rem 1rem; font-size: 0.9rem; background: #2ecc71; color: white; border: none; border-radius: 4px;">
                        검색
                    </button>
                </form>
            </div>
        </div>

        <!-- 기업 목록 -->
        <div class="company-list" style="display: flex; flex-direction: column; align-items: center; gap: 2rem;">
            {{#companyInfoPage}}
                <div class="company-card" style="width: 600px; background: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); overflow: hidden;">
                    <img src="https://picsum.photos/id/{{companyId}}/600/250" alt="기업 이미지" style="width: 100%; height: auto;">
                    <div style="padding: 1rem;">
                        <a href="/company/{{companyId}}" style="font-weight: bold; font-size: 1.2rem; text-decoration: none; color: #333;">{{companyName}}</a>
                        <p style="color: #666; margin-top: 0.5rem;">{{companyDesc}}</p>
                    </div>
                </div>
            {{/companyInfoPage}}

            {{^companyInfoPage}}
                <div style="text-align: center; color: #999;">
                    등록된 기업이 없습니다.
                </div>
            {{/companyInfoPage}}
        </div>

        <!-- 페이지 네비게이션 -->
        <div style="margin-top: 2rem; text-align: center;">
            {{#previousPageNumber}}
                <a href="/company/list?page={{previousPageNumber}}{{#keyword}}&keyword={{keyword}}{{/keyword}}" style="margin-right: 10px;">◀ 이전</a>
            {{/previousPageNumber}}

            {{#pageLinks}}
                {{#active}}
                    <strong style="margin: 0 5px;">{{displayNumber}}</strong>
                {{/active}}
                {{^active}}
                    <a href="/company/list?page={{pageNumber}}{{#keyword}}&keyword={{keyword}}{{/keyword}}" style="margin: 0 5px;">{{displayNumber}}</a>
                {{/active}}
            {{/pageLinks}}

            {{#nextPageNumber}}
                <a href="/company/list?page={{nextPageNumber}}{{#keyword}}&keyword={{keyword}}{{/keyword}}" style="margin-left: 10px;">다음 ▶</a>
            {{/nextPageNumber}}
        </div>
    </div>
</div>
{{> layout/footer}}