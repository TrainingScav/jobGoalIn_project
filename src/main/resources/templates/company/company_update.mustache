{{> layout/header}}
<div class="company-register-page">
    <form class="register-form" action="/company/{{companyInfo.companyId}}/update" method="post">
        <h1>기업 정보 등록</h1>

        <!-- 기업명 -->
        <div class="form-group">
            <label for="companyName">기업명<span class="required">*</span></label>
            <input type="text" id="companyName" name="companyName" value="{{companyInfo.companyName}}" required>
        </div>

        <!-- 기업 소개 -->
        <div class="form-group">
            <label for="companyDesc">기업 소개<span class="required">*</span></label>
            <textarea id="companyDesc" name="companyDesc" required> {{companyInfo.companyDesc}}</textarea>
        </div>

        <!-- CEO 이름 -->
        <div class="form-group">
            <label for="companyCeoName">CEO 이름<span class="required">*</span></label>
            <input type="text" id="companyCeoName" name="companyCeoName" value="{{companyInfo.companyCeoName}}" required>
        </div>

        <!-- 홈페이지 주소 -->
        <div class="form-group">
            <label for="homepageUrl">홈페이지 주소</label>
            <input type="text" id="homepageUrl" name="homepageUrl" value="{{companyInfo.homepageUrl}}">
        </div>

        <!-- 회사 전화 번호 -->
        <div class="form-group">
            <label for="phoneNumber">회사 전화 번호</label>
            <input type="text" id="phoneNumber" name="phoneNumber" value="{{companyInfo.phoneNumber}}">
        </div>

        <!-- 회사 이메일 -->
        <div class="form-group">
            <label for="companyEmail">회사 이메일</label>
            <input type="email" id="companyEmail" name="companyEmail" value="{{companyInfo.companyEmail}}">
        </div>

        <!-- 회사 주소 -->
        <div class="form-group">
            <label for="companyAddress">회사 주소</label>
            <input type="text" id="companyAddress" name="companyAddress" value="{{companyInfo.companyAddress}}">
        </div>

        <!-- 제출 버튼 -->
        <button type="submit" class="submit-button">수정하기</button>
    </form>
</div>
{{> layout/footer}}